---
import BaseLayout from "../layouts/BaseLayout.astro";

const stats = [
  { label: "Launch-ready in", value: "2 weeks" },
  { label: "Avg. uplift", value: "+38%" },
  { label: "Client rating", value: "5.0" },
];

const projects = [
  {
    name: "Noir Atelier",
    description: "Luxury ecommerce with cinematic motion and edge-to-edge storytelling.",
    result: "2.6x conversion lift",
  },
  {
    name: "Studio Meridian",
    description: "Modular marketing site with a lightning-fast booking flow.",
    result: "48% faster lead capture",
  },
  {
    name: "Aurora Labs",
    description: "Product launch with immersive visuals and WebGL accents.",
    result: "120K launch-day visits",
  },
];

const services = [
  {
    title: "Brand + Identity",
    detail: "Visual systems, tone, and polish that make your brand unforgettable.",
  },
  {
    title: "Web Experience Design",
    detail: "Narrative-driven layouts, interaction, and UI motion.",
  },
  {
    title: "Astro Build + Optimization",
    detail: "Production-ready Astro builds tuned for performance and SEO.",
  },
];

const process = [
  {
    step: "01",
    title: "Immersion",
    detail: "Deep-dive discovery to map your brand story, audience, and goals.",
  },
  {
    step: "02",
    title: "Design Direction",
    detail: "Moodboards, motion studies, and a cinematic UI blueprint.",
  },
  {
    step: "03",
    title: "Astro Build",
    detail: "Pixel-perfect components with performance-first architecture.",
  },
  {
    step: "04",
    title: "Launch + Optimize",
    detail: "SEO polish, analytics, and iteration after launch.",
  },
];

const stack = ["Astro", "GSAP", "Three.js", "Figma", "Framer", "Webflow", "Notion"];
---

<BaseLayout title="Luna Hayes · Freelance Web Developer">
  <main class="page">
    <nav class="nav">
      <div class="logo">Luna Hayes</div>
      <div class="nav__links">
        <a href="#work">Work</a>
        <a href="#services">Services</a>
        <a href="#process">Process</a>
        <a href="#contact" class="btn ghost small">Let’s talk</a>
      </div>
    </nav>
    <header class="hero">
      <div class="hero__content">
        <p class="eyebrow">Freelance Web Developer · Astro Specialist</p>
        <h1>
          I build cinematic, high-performance websites that turn curious visitors into loyal
          clients.
        </h1>
        <p class="lead">
          I help boutique brands and agencies launch immersive digital experiences in days, not
          months. Every build is crafted for clarity, conversion, and velocity.
        </p>
        <div class="hero__actions">
          <a class="btn primary" href="#contact">Book a discovery call</a>
          <a class="btn ghost" href="#work">View work</a>
        </div>
        <div class="hero__stats">
          {stats.map((stat) => (
            <div class="stat">
              <span>{stat.value}</span>
              <p>{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
      <div class="hero__visual">
        <div class="card">
          <p>Availability · Q2 2025</p>
          <h3>Now booking 2 new retainers</h3>
          <div class="pulse">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
        <div class="orbit">
          <div class="orb orb--lg"></div>
          <div class="orb orb--md"></div>
          <div class="orb orb--sm"></div>
        </div>
      </div>
    </header>

    <section class="marquee" aria-label="Trusted by forward-thinking brands">
      <div class="marquee__inner">
        <span>Arc &amp; Co</span>
        <span>Nova Studio</span>
        <span>Haven Collective</span>
        <span>Studio Meridian</span>
        <span>Aurora Labs</span>
        <span>Maison Rue</span>
        <span>Arc &amp; Co</span>
        <span>Nova Studio</span>
      </div>
    </section>

    <section class="section" id="work">
      <div class="section__title">
        <p class="eyebrow">Featured work</p>
        <h2>Recent launches that moved the needle.</h2>
      </div>
      <div class="grid">
        {projects.map((project) => (
          <article class="project-card">
            <h3>{project.name}</h3>
            <p>{project.description}</p>
            <span>{project.result}</span>
          </article>
        ))}
      </div>
    </section>

    <section class="section section--split" id="services">
      <div>
        <p class="eyebrow">Services</p>
        <h2>Strategy, design, and Astro development in one seamless sprint.</h2>
        <p class="body">
          I partner with founders who want bold visuals without sacrificing technical excellence.
          From narrative storytelling to motion design, every detail is intentional.
        </p>
      </div>
      <div class="stack">
        {services.map((service) => (
          <div class="service">
            <h3>{service.title}</h3>
            <p>{service.detail}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="section section--split" id="process">
      <div>
        <p class="eyebrow">Process</p>
        <h2>A white-glove build crafted for speed, clarity, and emotion.</h2>
        <p class="body">
          I keep projects lean and collaborative, so you always know what’s next and when we go
          live.
        </p>
        <div class="stack chips">
          {stack.map((item) => (
            <span class="chip">{item}</span>
          ))}
        </div>
      </div>
      <div class="stack process">
        {process.map((item) => (
          <div class="service">
            <span class="step">{item.step}</span>
            <h3>{item.title}</h3>
            <p>{item.detail}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="section testimonials">
      <div>
        <p class="eyebrow">Client love</p>
        <h2>“The fastest, most premium web launch we’ve ever had.”</h2>
      </div>
      <div class="quote">
        <p>
          “Luna delivered an Astro site that outperformed our previous build in every metric. The
          visuals feel like a luxury brand film, and the site loads instantly.”
        </p>
        <span>— Alina Chen, Creative Director at Studio Meridian</span>
      </div>
    </section>

    <section class="section contact" id="contact">
      <div>
        <p class="eyebrow">Let’s build</p>
        <h2>Ready for a website that feels like a flagship launch?</h2>
        <p class="body">
          Share your goals and I’ll return a tailored roadmap within 48 hours.
        </p>
      </div>
      <form class="contact__form">
        <label>
          Name
          <input type="text" placeholder="Your name" />
        </label>
        <label>
          Project vision
          <textarea placeholder="Tell me about the launch you’re planning"></textarea>
        </label>
        <button class="btn primary" type="submit">Send inquiry</button>
      </form>
    </section>

    <footer class="footer">
      <div>
        <h3>Let’s build something unforgettable.</h3>
        <p class="body">Based in Brooklyn · Available worldwide</p>
      </div>
      <div class="footer__links">
        <a href="mailto:hello@lunahayes.studio">hello@lunahayes.studio</a>
        <a href="#work">Project archive</a>
        <a href="#contact">Start a project</a>
      </div>
    </footer>
  </main>
</BaseLayout>
