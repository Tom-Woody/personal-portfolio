---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Thanks - Tom Woodhouse">
  <main class="page">
    <nav class="nav">
      <div class="logo">
        <a href="/">Tom Woodhouse</a>
      </div>
      <input id="nav-toggle" class="nav__toggle" type="checkbox" />
      <label class="nav__toggle-btn" for="nav-toggle" aria-label="Toggle navigation">
        <span></span>
        <span></span>
        <span></span>
      </label>
      <div class="nav__links">
        <a href="/#work">Work</a>
        <a href="/#services">Services</a>
        <a href="/#process">Process</a>
        <a href="/#contact" class="btn ghost small">Book a call</a>
      </div>
    </nav>

    <section class="section thanks">
      <div>
        <p class="eyebrow">Message sent</p>
        <h1>Thanks for reaching out.</h1>
        <p class="body">
          I have your details and will reply within 48 hours. If you need to add anything, email
          <a href="mailto:hello@tom-woodhouse.com">hello@tom-woodhouse.com</a>.
        </p>
        <a class="btn primary" href="/#work">Back to work</a>
      </div>
    </section>
  </main>
</BaseLayout>
